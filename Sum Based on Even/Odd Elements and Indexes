#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int a[100],b,sum =0,num =0,even=0,odd=0;

    scanf("%d", &b);

    for (int i=0;i<b;i++) {
        scanf("%d", &a[i]);
        if (a[i]%2 == 0) {
            sum+=a[i];
        } else {
            num+=a[i];
        }
        if (i%2==0) {
            even+=a[i];
        } else {
            odd+=a[i];
        }
    }
    printf("%d %d %d %d",sum,num,even,odd);

    return 0;
}
